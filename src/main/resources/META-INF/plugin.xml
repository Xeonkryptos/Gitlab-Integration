<idea-plugin>
    <id>com.github.xeonkryptos.integration</id>
    <name>Gitlab-Integration</name>
    <vendor>xeonkryptos (XeonAppDev@gmail.com)</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <openapi.vcs.ui.cloneDialog.VcsCloneDialogExtension
                implementation="com.github.xeonkryptos.integration.gitlab.ui.cloneDialog.GitlabCloneDialogExtension"/>

        <applicationService serviceImplementation="com.github.xeonkryptos.integration.gitlab.api.gitlab.GitlabClient"/>
        <applicationService
                serviceImplementation="com.github.xeonkryptos.integration.gitlab.service.AuthenticationManager"/>

        <projectService
                serviceImplementation="com.github.xeonkryptos.integration.gitlab.service.GitlabSettingsService"/>
        <projectService serviceImplementation="com.github.xeonkryptos.integration.gitlab.api.gitlab.GitlabProjectsApi"/>
        <projectService serviceImplementation="com.github.xeonkryptos.integration.gitlab.api.gitlab.GitlabUserApi"/>
        <projectService serviceImplementation="com.github.xeonkryptos.integration.gitlab.api.gitlab.GitlabGroupsApi"/>

        <projectConfigurable parentId="tools"
                             instance="com.github.xeonkryptos.integration.gitlab.settings.GitlabIntegrationSettingsConfigurable"
                             id="com.github.xeonkryptos.integration.gitlab.settings.GitlabIntegrationSettingsConfigurable"
                             displayName="Gitlab Settings" nonDefaultProject="false"/>
    </extensions>
    <actions>
        <group id="com.github.xeonkryptos.integration.gitlab.vcs.group" text="Gitlab" popup="true">
            <add-to-group group-id="Git.MainMenu" relative-to-action="Git.Configure.Remotes" anchor="before"/>
            <add-to-group group-id="Git.ContextMenu" relative-to-action="Git.Configure.Remotes" anchor="before"/>
        </group>
        <action id="com.github.xeonkryptos.integration.gitlab.project.create"
                class="com.github.xeonkryptos.integration.gitlab.ui.projectLinker.ProjectLinkerAction"
                text="Share Project on Gitlab"
                icon="/icons/gitlab-icon-rgb.svg">
            <add-to-group group-id="Vcs.MainMenu" anchor="last"/>
            <add-to-group group-id="com.github.xeonkryptos.integration.gitlab.vcs.group" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
